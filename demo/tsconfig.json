{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "baseUrl": "./",
    "diagnostics": false,
    "lib": ["es2015", "es2016", "dom"],
    "paths": {
      "@styles/*": ["styles/*"],
      "@components/*": ["components/*"],
      "@store/*": ["store/*"]
    }
  },
  "exclude": ["node_modules"],
  "moduleResolution": "node",
  "allowJs": true
}
